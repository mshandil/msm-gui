<h1>
  List of all directors
</h1>
<form action="/insert_director_record" method="post">
  <label for="name">Name:</label>
  <input id="name" type="text" name="name" required>

  <label for="dob">Date of Birth:</label>
  <input id="dob" type="date" name="dob" required>

  <label for="bio">Bio:</label>
  <textarea id="bio" name="bio" required></textarea>

  <label for="image">Image:</label>
  <input id="image" type="text" name="image" required>

  <button type="submit">Create Director</button>
</form>

<hr>

<table border="1">
  <tr>
    <th>
      ID
    </th>

    <th>
      Image
    </th>

    <th>
      Name
    </th>

    <th>
      Dob
    </th>

    <th>
    </th>
  </tr>

  <% @list_of_directors.each do |director| %>
  <tr>
    <td>
      <%= director.id %>
    </td>

    <td>
      <img src="<%= director.image %>" style="width:250px;">
    </td>

    <td>
      <%= director.name %>
    </td>

    <td>
      <%= director.dob %>
    </td>

    <td>
      <a href="/directors/<%= director.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
