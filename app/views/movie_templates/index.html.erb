<h1>
  List of all movies
</h1>

<form action="/insert_movie_record" method="post">
  <label for="title">Title:</label>
  <input id="title" type="text" name="title" required>

  <label for="year">Year:</label>
  <input id="year" type="number" name="year" required>

  <label for="duration">Duration:</label>
  <input id="duration" type="number" name="duration" required>

  <label for="description">Description:</label>
  <textarea id="description" name="description" required></textarea>

  <label for="image">Image:</label>
  <input id="image" type="text" name="image" required>

  <label for="director_id">Director ID:</label>
  <input id="director_id" type="number" name="director_id" required>

  <button type="submit">Create movie</button>
</form>

<hr>

<table border="1">
  <tr>
    <th>
      ID
    </th>

    <th>
      Image
    </th>

    <th>
      Title
    </th>

    <th>
      Year
    </th>

    <th>
      Director
    </th>

    <th>
    </th>
  </tr>

  <% @list_of_movies.each do |a_movie| %>
  <tr>
    <td>
      <%= a_movie.id %>
    </td>

    <td>
      <img src="<%= a_movie.image %>" style="width:250px;">
    </td>

    <td>
      <%= a_movie.title %>
    </td>

    <td>
      <%= a_movie.year %>
    </td>

    <td>
      <% matching_directors = Director.where({ :id => a_movie.director_id }) %>
      
      <% the_director = matching_directors.at(0) %>

      <%= the_director.name %>
    </td>

    <td>
      <a href="/movies/<%= a_movie.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
